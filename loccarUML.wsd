@startuml
skinparam classAttributeIconSize 0

' ============================
' Classes principais
' ============================

class Locatario {
  +idLocatario : int
  +email : string
  +telefone : string
  +cnh : string
  +created : datetime
  --
  +cadastrar() : void
  +atualizarDados() : void
  +consultarReservas() : List<Reserva>
}

class Reserva {
  +numeroReserva : int
  +dataLocacao : date
  +horaLocacao : time
  +dataEntrega : date
  +horaEntrega : time
  +diarias : int
  +valorDiaria : decimal
  +tipoDiaria : string
  +valorSeguroTerceiro : decimal
  +valorSeguroCarro : decimal
  +valorImposto : decimal
  +seguroCarro : bool
  --
  +calcularValorTotal() : decimal
  +confirmarReserva() : void
  +cancelarReserva() : void
}

class Veiculo {
  +idVeiculo : int
  +marca : string
  +modelo : string
  +anoFabricacao : int
  +anoModelo : int
  +renavam : string
  +capacidadeTanque : decimal
  +valorDiaria : decimal
  +valorDiariaEmpresa : decimal
  +valorDiariaMensal : decimal
  +valorDiariaReduzida : decimal
  --
  +verDisponibilidade() : bool
  +calcularPrecoDiaria(tipo : string) : decimal
  +registrarManutencao() : void
}

' ============================
' Especializações de Veículo
' ============================
class Veiculo_Carga {
  +capacidadeCarga : decimal
  +tipoCarga : string
  +tara : decimal
  +tamanhoCompartimentoCarga : string
  --
  +carregar(carga : decimal) : bool
}

class Veiculo_Passeio {
  +categoria : string
  +automatico : bool
  +direcaoHidraulica : bool
  +arCondicionado : bool
  --
  +ativarArCondicionado() : void
  +trocarMarchaAutomatico() : void
}

class Veiculo_Passageiro {
  +capacidadePassageiro : int
  +televisao : bool
  +arCondicionado : bool
  +direcaoHidraulica : bool
  --
  +ligarTelevisao() : void
  +regularArCondicionado() : void
}

class Motocicleta {
  +controleTracao : bool
  +freioAbs : bool
  +pilotoAutomatico : bool
  --
  +ativarControleTracao() : void
  +ativarPilotoAutomatico() : void
}

' ============================
' Relacionamentos
' ============================

Locatario "1" -- "0..*" Reserva : faz >
Reserva "1" -- "1..*" Veiculo : possui >

Veiculo <|-- Veiculo_Carga
Veiculo <|-- Veiculo_Passeio
Veiculo <|-- Veiculo_Passageiro
Veiculo <|-- Motocicleta

@enduml
